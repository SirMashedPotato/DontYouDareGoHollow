<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<!-- ==========[Mashed_DYDGH_HediffBase]========== -->
	<HediffDef Abstract="True" Name="Mashed_DYDGH_HediffBase">
		<hediffClass>HediffWithComps</hediffClass>
		<defaultLabelColor>(0.8, 0.4, 0.4)</defaultLabelColor>
		<minSeverity>0</minSeverity>
		<maxSeverity>1</maxSeverity>
		<initialSeverity>0.01</initialSeverity>
		<isBad>false</isBad>
	</HediffDef>
	<!-- ==========[Mashed_DYDGH_Darksign]========== -->
	<HediffDef ParentName="Mashed_DYDGH_HediffBase">
		<defName>Mashed_DYDGH_Darksign</defName>
		<label>darksign</label>
		<description>A circular brand shaped scar, caused by infection with a strange mechanite plague. Those with such scars will often resurrect shortly after death, losing some of their humanity in the process.</description>
		<descriptionHyperlinks>
			<HediffDef>Mashed_DYDGH_Hollowing</HediffDef>
		</descriptionHyperlinks>
		<comps>
			<li Class="Mashed_DYDGH.HediffCompProperties_Darksign"/>
		</comps>
	</HediffDef>
	<!-- ==========[Mashed_DYDGH_Hollowing]========== -->
	<HediffDef ParentName="Mashed_DYDGH_HediffBase">
		<defName>Mashed_DYDGH_Hollowing</defName>
		<label>hollowing</label>
		<description>The side effect of reanimation by darksign mechanites. Slowly diminshes the hosts humanity, eventually leaving them an empty vessel.</description>
		<descriptionHyperlinks>
			<HediffDef>Mashed_DYDGH_Hollowing</HediffDef>
		</descriptionHyperlinks>
		<comps>
		</comps>
	</HediffDef>
	<!-- ==========[Mashed_DYDGH_Resurrecting]========== -->
	<HediffDef ParentName="Mashed_DYDGH_HediffBase">
		<defName>Mashed_DYDGH_Resurrecting</defName>
		<label>resurrecting</label>
		<description>Darksign mechanites resurrecting their host, and slowly whittling away at what makes them human.</description>
		<descriptionHyperlinks>
			<HediffDef>Mashed_DYDGH_Hollowing</HediffDef>
		</descriptionHyperlinks>
		<comps>
			<li Class="Mashed_DYDGH.HediffCompProperties_Resurrecting">
				<ticksTillResurrection>100</ticksTillResurrection>
			</li>
		</comps>
	</HediffDef>
</Defs>